#
# ./build/containers/go_nix_simple/Containerfile
#

# Passed in variables
ARG MYPATH
ARG COMMIT
ARG DATE
ARG VERSION

ARG TARGETOS
ARG TARGETARCH
ARG TARGETPLATFORM

ARG GO_VERSION=1.24.1

#https://github.com/GoogleContainerTools/distroless?tab=readme-ov-file#examples-with-docker
FROM --platform=${BUILDPLATFORM} golang:${GO_VERSION} AS build

ARG MYPATH
ARG COMMIT
ARG DATE
ARG VERSION

ARG TARGETOS
ARG TARGETARCH
ARG TARGETPLATFORM

RUN echo MYPATH:${MYPATH} COMMIT:${COMMIT} DATE:${DATE} VERSION:${VERSION} \
    BUILDPLATFORM:${BUILDPLATFORM} TARGETPLATFORM:${TARGETPLATFORM}

WORKDIR /go/src
COPY . .

RUN --mount=type=cache,target=/go/pkg/mod \
    --mount=type=cache,target=/root/.cache/go-build \
    CGO_ENABLED=0 go build \
    -trimpath \
    -tags=netgo,osusergo \
    -ldflags="-s -w" \
    -o /go/bin/go_nix_simple \
    ./cmd/go_nix_simple/go_nix_simple.go

# # GOPROXY=http://10.88.88.88:8888 \
# RUN GOPROXY=http://localhost:8888 \
#     CGO_ENABLED=0 go build \
#     -o /go/bin/go_nix_simple \
#     ./cmd/go_nix_simple/go_nix_simple.go

# https://github.com/docker-archive/compose-cli/blob/main/Dockerfile#L31

#--------------------
# COMPRESS
# https://hub.docker.com/_/debian/tags
FROM debian:bullseye-slim AS compress
RUN --mount=type=cache,target=/var/cache/apt \
    --mount=type=cache,target=/var/lib/apt/lists \
    apt-get update && \
    apt-get install -y --no-install-recommends upx-ucl
COPY --from=build /go/bin/go_nix_simple /go_nix_simple
#RUN ls -lh /go_nix_simple
RUN upx --best --lzma /go_nix_simple
#RUN ls -lh /go_nix_simple

# WARNING!! Don't do this!!  Nix store is empty!
# #--------------------
# # COMPRESS Nix
# FROM nixos/nix:latest AS compress
# COPY --from=build /go/bin/go_nix_simple /go_nix_simple
# RUN --mount=type=cache,target=/nix/store \
#     nix-shell -p upx --run "upx --best --lzma /go_nix_simple"

FROM scratch AS arrange
COPY --from=compress --chmod=544 /go_nix_simple /
COPY --from=build --chmod=444 /go/src/VERSION /

# https://github.com/GoogleContainerTools/distroless?tab=readme-ov-file#what-images-are-available
# https://github.com/GoogleContainerTools/distroless?tab=readme-ov-file#debug-images
#FROM gcr.io/distroless/static-debian12:nonroot
FROM gcr.io/distroless/static-debian12
#FROM gcr.io/distroless/static-debian12:debug
#FROM scratch

# becomes a single layer
COPY --from=arrange / /

USER 9999:9999

# Prometheus
EXPOSE 9108

ENTRYPOINT ["/go_nix_simple"]

# end